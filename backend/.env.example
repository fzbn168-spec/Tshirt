# Database Connection
# SQLite (Dev)
DATABASE_URL="file:./dev.db"
# PostgreSQL (Prod)
# DATABASE_URL="postgresql://admin:securepassword@localhost:5432/soletrade?schema=public"

# Postgres Auth (For Docker)
POSTGRES_USER="admin"
POSTGRES_PASSWORD="securepassword"
POSTGRES_DB="soletrade"

# JWT Auth
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRATION="1d"

# Frontend URL (for email links and social auth redirects)
FRONTEND_URL="http://localhost:3000"

# Social Authentication
# Google
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_CALLBACK_URL="http://localhost:3001/auth/google/callback"

# Facebook
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"
FACEBOOK_CALLBACK_URL="http://localhost:3001/auth/facebook/callback"

# SMTP Email Configuration (Nodemailer)
# You can easily switch providers later by updating these values.

# Option 1: Outlook / Hotmail (Current Choice)
