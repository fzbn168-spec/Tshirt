SMTP_PORT=587
SMTP_SECURE=false               # Outlook uses STARTTLS, so secure is false
SMTP_USER="your-email@outlook.com"
SMTP_PASS="your-password"       # Use App Password if 2FA is enabled
SMTP_FROM='"SoleTrade Support" <your-email@outlook.com>'

